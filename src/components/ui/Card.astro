---
import { cn } from "../../lib/utils";

interface Props {
  class?: string;
  hover?: boolean;
  [key: string]: any;
}

const { class: className, hover = false, ...rest } = Astro.props;
---

<div
  class={cn(
    "rounded-xl border border-slate-200 bg-white text-slate-950 shadow-card transition-all duration-200",
    hover && "hover:shadow-card-hover hover:-translate-y-0.5",
    className
  )}
  {...rest}
>
  <slot />
</div>
