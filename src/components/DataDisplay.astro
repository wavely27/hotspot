---
interface DataDisplayProps {
  apiUrl: string
}

const { apiUrl } = Astro.props
---

<div class="data-display">
  <div class="header">
    <h2>Hotspots Database</h2>
    <p>Click the button to fetch data from Supabase</p>
  </div>

  <button id="fetchBtn" class="fetch-btn">Fetch Data from Supabase</button>

  <div id="result" class="result"></div>
</div>

<style>
  .data-display {
    max-width: 800px;
    margin: 2rem auto;
    padding: 2rem;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
  }

  .header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .header h2 {
    margin: 0 0 0.5rem 0;
    color: #1f2937;
  }

  .header p {
    margin: 0;
    color: #6b7280;
  }

  .fetch-btn {
    display: block;
    width: 100%;
    padding: 0.75rem 1.5rem;
    background: #3b82f6;
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 1rem;
    cursor: pointer;
    transition: background 0.2s;
  }

  .fetch-btn:hover {
    background: #2563eb;
  }

  .fetch-btn:disabled {
    background: #9ca3af;
    cursor: not-allowed;
  }

  .result {
    margin-top: 1.5rem;
    padding: 1rem;
    border-radius: 6px;
    font-family: 'Courier New', monospace;
    font-size: 0.875rem;
    white-space: pre-wrap;
    word-break: break-all;
  }

  .result.success {
    background: #dcfce7;
    color: #166534;
    border: 1px solid #22c55e;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  .result.error {
    background: #fee2e2;
    color: #991b1b;
    border: 1px solid #ef4444;
  }

  .result.loading {
    background: #e0f2fe;
    color: #0369a1;
    border: 1px solid #0ea5e9;
  }

  .hotspots-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .count {
    font-size: 0.875rem;
    color: #6b7280;
    margin-bottom: 0.5rem;
  }

  .hotspot-item {
    background: white;
    border: 1px solid #d1d5db;
    border-radius: 6px;
    padding: 1rem;
  }

  .hotspot-item h3 {
    margin: 0 0 0.5rem 0;
    color: #111827;
    font-size: 1.125rem;
  }

  .hotspot-item .summary {
    margin: 0 0 1rem 0;
    color: #4b5563;
    line-height: 1.5;
  }

  .hotspot-item .meta {
    display: flex;
    gap: 1rem;
    margin-bottom: 0.75rem;
    font-size: 0.875rem;
  }

  .hotspot-item .source {
    color: #6b7280;
  }

  .hotspot-item .status {
    font-weight: 600;
  }

  .hotspot-item .status.published {
    color: #059669;
  }

  .hotspot-item .status.draft {
    color: #dc2626;
  }

  .hotspot-item .link {
    display: inline-block;
    color: #2563eb;
    text-decoration: none;
    font-weight: 500;
  }

  .hotspot-item .link:hover {
    text-decoration: underline;
  }
</style>

<script define:vars={{ apiUrl }}>
  const btn = document.getElementById('fetchBtn')
  const result = document.getElementById('result')

  btn.addEventListener('click', async () => {
    btn.disabled = true
    result.className = 'result loading'
    result.textContent = 'Loading...'

    try {
      const response = await fetch(apiUrl)
      const data = await response.json()

      if (data.success) {
        result.className = 'result success'

        if (data.data && data.data.length > 0) {
          const items = data.data.map((item) => `
            <div class="hotspot-item">
              <h3>${item.title || 'Untitled'}</h3>
              <p class="summary">${item.summary || 'No summary'}</p>
              <div class="meta">
                <span class="source">${item.source || 'Unknown'}</span>
                <span class="status ${item.is_published ? 'published' : 'draft'}">
                  ${item.is_published ? 'Published' : 'Draft'}
                </span>
              </div>
              <a href="${item.url || '#'}" target="_blank" class="link">View Source â†’</a>
            </div>
          `).join('')

          result.innerHTML = `
            <div class="hotspots-list">
              <div class="count">${data.count} hotspot(s) found</div>
              ${items}
            </div>
          `
        } else {
          result.textContent = 'No data found in hotspots table'
        }
      } else {
        result.className = 'result error'
        result.textContent = JSON.stringify(data, null, 2)
      }
    } catch (error) {
      result.className = 'result error'
      result.textContent = `Error: ${error instanceof Error ? error.message : 'Failed to fetch data'}`
    } finally {
      btn.disabled = false
    }
  })
</script>
