function parseMarkdown(content: string): string {
  return content
    .replace(/^### (\d+)\. \[([^\]]+)\]\(([^)]+)\)/gm, '<div class="py-2"><a href="$3" target="_blank" rel="noopener" class="text-brand-primary hover:underline font-medium">$1. $2</a></div>')
    .replace(/^## (.+)$/gm, '<h3 class="text-xl font-bold text-slate-900 mt-8 mb-4 pb-2 border-b border-brand-primary/20">$1</h3>')
    .replace(/^# (.+)$/gm, '<h2 class="text-2xl font-bold text-slate-900 mb-4">$1</h2>')
    .replace(/^> (.+)$/gm, '<blockquote class="my-4 pl-4 py-3 bg-slate-50 border-l-4 border-brand-primary text-slate-600">$1</blockquote>')
    .replace(/\*\*([^*]+)\*\*/g, '<strong class="font-bold text-slate-900">$1</strong>')
    .replace(/^---$/gm, '<hr class="my-8 border-slate-200" />')
    .replace(/\n\n/g, '<br/>')
}

// æ ¼å¼åŒ–æ—¥æœŸ
function formatDate(dateStr: string): string {
  const d = new Date(dateStr as string)
  return d.toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    weekday: 'long'
  })
}

