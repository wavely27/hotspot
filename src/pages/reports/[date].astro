import { supabase } from '../../lib/supabase'
import DailyAnalysis from '../../components/DailyAnalysis.astro';

// æ„å»ºæ—¶ç”Ÿæˆæ‰€æœ‰é™æ€è·¯å¾„
export async function getStaticPaths() {
  if (!supabase) {
    return []
  }
  
  const { data } = await supabase
    .from('daily_reports')
    .select('report_date')
    .order('report_date', { ascending: false })
  
  return (data || []).map(report => ({
    params: { date: report.report_date }
  }))
}

const { date } = Astro.params

interface DailyReport {
  id: string
  report_date: string
  content: string
  summary: string
  created_at: string
}

interface Hotspot {
  id: string;
  title: string;
  url: string;
  summary: string;
  source: string;
  tags: string[];
  is_primary: boolean;
  duplicate_group?: string;
}

let report: DailyReport | null = null
let analysisData: any = null
let hotspots: Hotspot[] = []
let error: string | null = null

if (supabase && date) {
  try {
    // 1. Fetch Daily Report (Markdown & Summary)
    const { data: reportData, error: fetchError } = await supabase
      .from('daily_reports')
      .select('*')
      .eq('report_date', date)
      .single()

    if (fetchError) {
      error = fetchError.message
    } else {
      report = reportData
    }

    // 2. Fetch Daily Analysis
    const { data: analysis } = await supabase
      .from('daily_analysis')
      .select('*')
      .eq('report_date', date)
      .single()
    
    analysisData = analysis

    // 3. Fetch Structured Hotspots
    // æ„é€ æ—¶é—´èŒƒå›´ (UTC)
    const startDate = `${date}T00:00:00.000Z`
    const endDate = `${date}T23:59:59.999Z`

    const { data: hotspotsData } = await supabase
      .from('hotspots')
      .select('*')
      .gte('created_at', startDate)
      .lte('created_at', endDate)
      .eq('is_primary', true) // åªè·å–ä¸»æ¡ç›®
    
    if (hotspotsData) {
      hotspots = hotspotsData
    }

  } catch (e) {
    error = e instanceof Error ? e.message : 'Failed to fetch report'
  }
}

// è§£æ Markdown å†…å®¹ä¸º HTML (ç”¨äºå›é€€æ˜¾ç¤º)
function parseMarkdown(content: string): string {
  return content
    .replace(/^### (\d+)\. \[([^\]]+)\]\(([^)]+)\)/gm, '<div class="report-item"><a href="$3" target="_blank" rel="noopener" class="report-link">$1. $2</a></div>')
    .replace(/^## (.+)$/gm, '<h3 class="report-source">$1</h3>')
    .replace(/^# (.+)$/gm, '<h2 class="report-title">$1</h2>')
    .replace(/^> (.+)$/gm, '<blockquote class="report-quote">$1</blockquote>')
    .replace(/\*\*([^*]+)\*\*/g, '<strong>$1</strong>')
    .replace(/^---$/gm, '<hr class="report-divider" />')
    .replace(/\n\n/g, '<br/>')
}

// æ ¼å¼åŒ–æ—¥æœŸ
function formatDate(dateStr: string): string {
  const d = new Date(dateStr)
  return d.toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    weekday: 'long'
  })
}

// æŒ‰æ ‡ç­¾åˆ†ç»„
const groupedHotspots = {
  trending: hotspots.filter(h => h.tags?.includes('trending')),
  tech: hotspots.filter(h => h.tags?.includes('tech')),
  business: hotspots.filter(h => h.tags?.includes('business')),
  other: hotspots.filter(h => !h.tags || (!h.tags.includes('trending') && !h.tags.includes('tech') && !h.tags.includes('business')))
}

const hasStructuredData = hotspots.length > 0
